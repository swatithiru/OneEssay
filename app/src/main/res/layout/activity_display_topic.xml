<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayTopicActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topics"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45dp"
        android:id="@+id/topics"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/topics"
        android:clickable="true"
        app:backgroundTint="@android:color/background_light"
        android:scaleType="fitXY"
        android:src="@drawable/floating_action_button"/>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/topics"
        android:entries="@array/topics_array"
        >
    </ListView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Essay"
        android:id="@+id/startessaybutton"
        android:layout_below="@+id/topics"
        android:onClick="onClickEssay"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backbutton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/startessaybutton"
        />


</RelativeLayout>